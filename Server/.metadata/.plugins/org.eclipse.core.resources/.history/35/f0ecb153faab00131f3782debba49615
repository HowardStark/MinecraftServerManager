name: MinecraftServerManager
main: in.snowcraft.msm.Manager
version: 0.2
description: Minecraft Administration tool for Android. 
author: powerpawn
commands:
  msm:
    description: Shows Minecraft Server Manager's help.
    usage: | 
        /msm help - Shows the help
        /msm reload - Reloads the config file
        /msm username <username> - Changes the login username
        /msm password <password> - Changes the login password
permissions:
  msm.*:
    default: op
    description: Allows use of all Minecraft Server Manager commands.
    children:
      msm.help: true
      msm.reload: true
      msm.username: true
      msm.password: true
  msm.help:
    description: Allows use of /msm help
  msm.reload:
    description: Allows use of /msm reload
  msm.username:
    description: Allows use of /msm username
  msm.password:
    description: Allows use of /msm password.
    
        